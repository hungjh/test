/* pages/newstuwk/newstuwk.wxss */
.contant_top{
  width: 90%;
  margin: 0 auto;
}
.contant_top image{
  margin: 30px auto;
  display: block;
  width: 150px;
  height: 33px;
}
.contant_top input{
  border-top: 0px;
  box-shadow: none;
  border-right: none;
  border-left: none;
  border-radius: 0px;
  text-align: center;
  font-size: 15px;
  border-bottom: 1px solid #AEAEAE;
  width: 100%;
  line-height: 22px;
  padding: 10px 0px;
  outline: none;
  cursor: pointer
}
.contant_top .message{
    margin-top: 8px;
    text-align: center;
}
.contant_top .message image{
    width: 14px;
    height: 14px;
    margin: 0px;
    display: inline-block;
    margin-right: 6px;
    vertical-align: middle;
    margin-top: -1px;
}
.contant_top .message text{
    display: inline-block;
    margin: 0px;
    color: #FC0000;
}
.contant_top text{
    color: #C8C6C6;
    font-size: 14px;
    line-height: 27px;
    margin-top: 10px;
    letter-spacing: 1px;
    text-align: center;
    display: block;
}
.plaInput{
  font-size: 13px;
  color: #C8C6C6;
}
.contant_top button{
    width: 100%;
    margin: 10px auto;
    border-radius: 20px;
    color: #fff;
    background: #1098EC;
    line-height: 25px;
    padding: 6px 12px;
}
.contant_bottom{
    margin-top: 20px;
}
.contant_bottom text{
    color: #C8C6C6;
    text-align: center;
    font-size: 13px;
}
.contant_bottom .wifi image{
    display: block;
    margin: 10px auto;
    width: 53px;
    height: 40px;
}
.contant_bottom .wifi text{
    display: block;
    text-align: center;
    color: #C8C6C6;
    font-size: 13px;
}
.button-hover {
  background-color: red;
}
.footer{
    position: absolute;
    bottom:0px;
}
.footer text{
    text-align: center;
    color: #B2B2B2;
    font-size: 13px;
    margin-bottom: 5px;
    display: block;
}